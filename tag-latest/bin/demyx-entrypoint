#!/bin/bash
# Demyx
# https://demyx.sh
set -eEuo pipefail
#
#   Main.
#
demyx_entrypoint() {
    # Install WordPress
    demyx-install

    # Generate config
    sudo -E demyx-config

    # Start crond
    sudo -E demyx-sudo

    # OpenLiteSpeed admin
    sudo -E demyx-admin

    # OpenLiteSpeed htpasswd
    sudo -E demyx-htpasswd
}
#
#   Init.
#
demyx_entrypoint
#
#   Exec.
#
if [[ -n "$(pgrep lshttpd || true)" ]]; then
    sudo -E demyx-lsws restart
else
    # Start OLS
    sudo -E demyx-lsws
    exec tail -f "${DEMYX_LOG}/ols.access.log" "${DEMYX_LOG}/ols.error.log"
fi
